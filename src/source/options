const config = require('./src/'+workspace+'/config.json');

const path = require('path');
<% } %>
module.exports = {
  <% if(template === "multiple"){ %>
  entryPath: getEntry('src/pages'), //入口
  <% }else if(template === "h5"){ %>
  entryPath: 'src/'+workspace+'/index.js',//入口
  <% }else{ %>
