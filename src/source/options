  <% } %>
  outputDir: "dist", //输出目录
  <% if(template === "h5"){ %>
  assetsDir: 'assets/'+workspace,
  indexName: workspace+'/index.html',//html名称
  <% }else{ %>
  assetsDir: "assets", //静态资源目录
  indexName: "index.html", //html名称
  <% } %>
  indexPath: "index.html", //入口html
  publicPath: "/", //公共public
