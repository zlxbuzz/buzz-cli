<% if(template === "multiple"){ %>
const path = require("path");
const fs = require("fs");

const getEntry = function(pagePath) {
  const entries = {};
  const absDir = path.resolve(process.cwd(), pagePath);
  const dirs = fs.readdirSync(absDir);
  dirs.forEach(dir => {
    const file = path.resolve(absDir, dir, "index.js");
    entries[dir] = file;
  });
  return entries;
};
<%}else if(template === "h5"){%>
